@{
    ViewData["Title"] = "Home";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("_Nav")

    <div class="hero-section">
        <div class="text-content">
            <h1>Welcome to NexaLearn</h1>
            <p>Experience the ultimate online quiz platform. Take quizzes, view your scores, and access section-specific study materials with ease.</p>
            <p>Engage in real-time quizzing and enhance your learning with interactive features. Get started today and join the NexaLearn community.</p>
            <a href="#">Get started for free</a>
        </div>
        <div class="image-content">
            <img src="~/img/Section2.1.jpg" alt="Hero Image">
        </div>
    </div>
    <!-- About Us Section -->
    <div class="responsive-container-block bigContainer">
        <div class="responsive-container-block Container">
            <img class="mainImg" src="~/img/homework-1735644_1280.png">
            <div class="allText aboveText">
                <p class="text-blk headingText">
                    About Us
                </p>
                <p class="text-blk subHeadingText">
                    Empowering students to learn and excel through engaging quizzes and comprehensive study materials.
                </p>
                <p class="text-blk description">
                    At NexaLearn, we believe in making learning interactive and fun. Our platform is designed to help students achieve their academic goals through innovative quizzing and study resources.
                </p>
                <button class="explore">
                    Explore
                </button>
            </div>
        </div>
        <div class="responsive-container-block Container bottomContainer">
            <img class="mainImg" src="~/img/Quiz.png">
            <div class="allText bottomText">
                <p class="text-blk headingText">
                    Our Vision
                </p>
                <p class="text-blk subHeadingText">
                    To be the leading platform for interactive learning and academic success.
                </p>
                <p class="text-blk description">
                    We aim to create a connected learning environment where students can easily access quizzes, track their progress, and engage with peers and instructors. Our vision is to make education accessible and enjoyable for everyone.
                </p>
                <button class="explore">
                    Explore
                </button>
            </div>
        </div>
    </div>

    <div class="second-hero-section">
        <div class="image-content">
            <img src="~/img/97350-OKYIEE-393.jpg" alt="Second Hero Image">
        </div>
        <div class="text-content">
            <h2>Online Quizzing Made Easy</h2>
            <p>Transform your learning experience with NexaLearn.</p>
            <p>Our user-friendly platform combines the latest technology with a focus on user experience, ensuring that quizzes are both engaging and accessible. Join us and see how fun and effective learning can be.</p>
            <a href="#">Learn more</a>
        </div>
    </div>

    <div class="footer">
        <p>&copy; 2024 NexaLearn. All rights reserved.</p>
    </div>
</body>
</html>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
