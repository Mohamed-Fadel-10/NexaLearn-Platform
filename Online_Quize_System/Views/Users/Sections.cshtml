@using Entities.Models
@model List<Section>
@{
    ViewData["Title"] = "Sections";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        .container-fluid {
            display: flex;
            margin-top: 80px;
            height: calc(100vh - 80px);
            overflow: hidden;
        }

        .main-content {
            flex: 2;
            padding: 20px;
            overflow-y: auto;
            background-color: #ffffff;
            margin-top: 35px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .main-content h3 {
        font-size:48px;
        color: #91cbf7;
        font-weight:bold;
        text-align:center;
        }

        .sidebar {
            flex: 0.4;
            padding: 20px;
            background-color: #91cbf7;
            overflow-y: auto;
            margin-left: 30px;
            margin-top: 28px;
            border-radius: 8px;
        }

            .sidebar h2 {
                color: #ffffff;
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
            }

        .section-item {
            border: 1px solid black;
            padding: 10px;
            margin-bottom: 10px;
            cursor: pointer;
            background-color: #ffffff;
            transition: background-color 0.3s ease;
            text-align: center;
            color: #000;
            border-radius: 5px;
        }

            .section-item:hover {
                background-color: white;
                border-style: solid;
                border-width: 1px;
                border-color: #cc7a00;
                color: black;
            }

            .section-item h5 {
                margin: 0;
                font-size: 18px;
            }

        .update-card {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .update-card:hover {
                transform: translateY(-5px);
            }

            .update-card h5 {
                margin: 0 0 10px 0;
                font-size: 20px;
                color: #333;
            }

            .update-card p {
                margin: 0;
                font-size: 16px;
                color: #6c757d;
            }

        .enroll-link {
            color: #ffffff;
            text-decoration: none;
            display: block;
            margin-top: 20px;
            font-weight: bold;
            text-align: center;
            padding: 10px;
            border: 1px solid #ffffff;
            background-color: #ff9900;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .enroll-link:hover {
                background-color: #cc7a00;
                color: #ffffff;
            }

        .material-file {
            margin-top: 10px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

            .material-file a {
                margin-left: 10px;
                color: #007bff;
                text-decoration: none;
                border: 1px solid #007bff;
                padding: 5px 10px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .material-file a:hover {
                    background-color: #007bff;
                    color: #ffffff;
                }

        .pdf-viewer, .text-viewer {
            width: 100%;
            height: 500px;
            border: 1px solid #ccc;
            overflow: auto;
            border-radius: 8px;
        }

        .image-viewer {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    @Html.Partial("_Nav")
    <div class="container-fluid">
        <div class="main-content" id="main-content">
            <h3>Section Details</h3>
            <div id="section-details">
                <p>Select a section to view its details and materials.</p>
            </div>
        </div>
        <div class="sidebar">
            <h2>Enrolled Sections</h2>
            @foreach (var item in Model)
            {
                <div class="section-item" onclick="loadSection('@item.Id')">
                    <h5>@item.Name</h5>
                </div>
            }
            <a asp-action="Enroll" asp-controller="Users" class="enroll-link">ENROLL+</a>
        </div>
    </div>
    <script>
        function loadSection(sectionId) {
            $.ajax({
                url: '@Url.Action("GetSectionDetails", "Section")',
                type: 'GET',
                data: { sectionId: sectionId },
                success: function (data) {
                    var sectionDetails = $('#section-details');
                    sectionDetails.empty();
                    sectionDetails.append('<h1> Section Name : ' + data.sectionName + '</h1>');
                    $.each(data.materials, function (index, material) {
                        var card = $('<div class="update-card"></div>');
                        card.append('<h5> Title : ' + material.title + '</h5>');
                        card.append('<p> Description : ' + material.description + '</p>');

                        if (material.filePath) {
                            var encodedFilePath = encodeURIComponent(material.filePath);
                            var downloadUrl = '@Url.Action("DownloadFile", "Section")' + '?filePath=' + encodedFilePath;
                            var fileElement = '<div class="material-file"><a href="' + downloadUrl + '">Download File</a></div>';

                            card.append(fileElement);
                        }
   
                        sectionDetails.append(card);
                    });
                },
                error: function (xhr, status, error) {
                    console.log("Error: " + error);
                }
            });
        }
    </script>
</body>
</html>
