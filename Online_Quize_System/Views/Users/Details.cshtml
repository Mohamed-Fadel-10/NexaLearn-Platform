@using Infrastructure.ViewModels
@model UserProfileDataViewModel

@{
    ViewData["Title"] = "User Profile";
    Layout = "_Dashboard";
}

<h2 class="text-primary font-weight-bold">@ViewData["Title"]</h2>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h6 class="m-0 font-weight-bold">User Details</h6>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <label class="font-weight-bold text-dark">Name:</label>
                <p class="h5">@Model.Name</p>
            </div>
            <div class="col-md-6">
                <label class="font-weight-bold text-dark">Username:</label>
                <p class="h5">@Model.UserName</p>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <label class="font-weight-bold text-dark">Email:</label>
                <p class="h5">@Model.Email</p>
            </div>
            <div class="col-md-6">
                <label class="font-weight-bold text-dark">Phone:</label>
                <p class="h5">@Model.Phone</p>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <label class="font-weight-bold text-dark">Major:</label>
                <p class="h5">@Model.Major</p>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <form asp-action="DeleteUser" asp-controller="Admin" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            </form>
        </div>
    </div>
</div>

<style>
    .card-header {
        font-size: 1.2rem;
    }

    .card-body p {
        font-size: 1.1rem;
        margin-bottom: 0;
    }

    label {
        font-size: 1rem;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1rem;
    }
</style>
