@using Entities.Models
@using Infrastructure.ViewModels
@model SectionViewModel
@{
    Layout = "_Dashboard";
}
<h1>Add New Section</h1>
<form asp-action="AddSection" asp-controller="Admin">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div>
        <label asp-for="Name" class="control-label col-md-2"> Name</label>
        <input type="text" name="name" asp-for="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="Capacity" class="control-label col-md-2"> Capacity</label>
        <input type="text" name="Capacity" asp-for="Capacity" class="form-control" />
    </div>
    <div>
        <label asp-for="Address" class="control-label col-md-2"> Address</label>
        <input type="text" name="Address" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <br/>
    <select asp-for="SubjectId" asp-items="ViewBag.Subjects" class="form-control">
        <option value="" class="form-control">Select a Subject</option>
    </select>
    <button type="submit" value="Add" class="btn btn-primary"> Add</button>
</form>