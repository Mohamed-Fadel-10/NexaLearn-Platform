@using Infrastructure.ViewModels
@model AddRoleViewModel
@{
    Layout = "_Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg w-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center">Add New Role</h4>
                </div>
                <div class="card-body">
                    <form asp-action="AddRole" asp-controller="Admin">
                        <div class="form-group mb-3">
                            <label class="control-label" asp-for="Name">Role Name</label>
                            <input type="text" name="name" class="form-control" asp-for="Name" placeholder="Enter role name" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" value="Add" class="btn btn-primary px-4 w-100">Add Role</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
