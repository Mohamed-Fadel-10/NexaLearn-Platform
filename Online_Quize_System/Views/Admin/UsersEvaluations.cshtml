@using Infrastructure.ViewModels
@model FilterUsersEvaluationViewModel
@{
    ViewData["Title"] = "Quiz Notifications";
    Layout = "_Dashboard";
}

<h2>Quiz Notifications</h2>

<form id="filterForm" class="form-inline mb-3">
    <select asp-for="SubjectId" asp-items="ViewBag.subjects" class="form-control mr-2" id="subjectSelect">
        <option value="">Select Subject</option>
    </select>
    <select asp-for="SectionId" asp-items="ViewBag.sections" class="form-control mr-2" id="sectionSelect">
        <option value="">Select Section</option>
    </select>
    <select asp-for="QuizId" asp-items="ViewBag.quizzes" class="form-control mr-2" id="quizSelect">
        <option value="">Select Quiz</option>
    </select>
    <button class="btn btn-outline-success" type="button" id="searchButton">Search</button>
</form>
<div class="table-responsive">
<table id="notificationsTable" class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Quiz ID</th>
            <th>Quiz Name</th>
            <th>Quiz SessionId</th>
            <th>UserName</th>
            <th>Score</th>
            <th>Submission Date</th>
            <th>Subject</th>
            <th>Section</th>

        </tr>
    </thead>
    <tbody id="notificationsBody">
    </tbody>
</table>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.7/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/quizHub")
            .build();

        connection.on("ReceiveNotification", (quizId, quizName,quizSession, userName, score, submissionDate, subject,section) => {
            const tableBody = document.getElementById("notificationsBody");
            const row = document.createElement("tr");

            const quizIdCell = document.createElement("td");
            quizIdCell.innerText = quizId;
            row.appendChild(quizIdCell);

            const quizNameCell = document.createElement("td");
            quizNameCell.innerText = quizName;
            row.appendChild(quizNameCell);

            const quizSessionCell = document.createElement("td");
            quizSessionCell.innerText = quizSession;
            row.appendChild(quizSessionCell);

            const userNameCell = document.createElement("td");
            userNameCell.innerText = userName;
            row.appendChild(userNameCell);

            const scoreCell = document.createElement("td");
            scoreCell.innerText = score;
            row.appendChild(scoreCell);

            const submissionDateCell = document.createElement("td");
            submissionDateCell.innerText = submissionDate;
            row.appendChild(submissionDateCell);

            const subjectCell = document.createElement("td");
            subjectCell.innerText = subject;
            row.appendChild(subjectCell);

            const sectionCell = document.createElement("td");
            sectionCell.innerText = section;
            row.appendChild(sectionCell);

            tableBody.appendChild(row);
        });

        connection.start().catch(err => console.error(err.toString()));

        $('#searchButton').on('click', function () {
            const subject = $('#subjectSelect').val();
            const section = $('#sectionSelect').val();
            const quiz = $('#quizSelect').val();

            $.ajax({
                url: '@Url.Action("Filtrations", "Admin")',
                type: 'GET',
                data: {
                    subjectId: subject,
                    sectionId: section,
                    quizId: quiz
                },
                success: function (data) {
                    console.log(data);
                    const tableBody = $('#notificationsBody');
                    tableBody.empty();

                    data.forEach(item => {
                        const row = $('<tr></tr>');

                        const quizIdCell = $('<td></td>').text(item.quizID);
                        const quizNameCell = $('<td></td>').text(item.quizName);
                        const quizSessionCell = $('<td></td>').text(item.quizSession);
                        const userNameCell = $('<td></td>').text(item.userName);
                        const scoreCell = $('<td></td>').text(item.score);
                        const submissionDateCell = $('<td></td>').text(item.submissionDate);
                        const subjectCell = $('<td></td>').text(item.subject);
                        const sectionCell = $('<td></td>').text(item.section);


                        row.append(quizIdCell, quizNameCell, quizSessionCell, userNameCell, scoreCell, submissionDateCell, subjectCell, sectionCell);
                        tableBody.append(row);
                    });
                },
                error: function (error) {
                    console.error('Error fetching filtered data:', error);
                }
            });
        });
    </script>
}

<style>
    .form-inline {
        display: flex;
        align-items: center;
    }

        .form-inline .form-control, .form-inline .btn {
            margin: 0 5px;
        }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }
</style>
