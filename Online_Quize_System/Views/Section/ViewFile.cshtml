@model string

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View File</title>
</head>
<body>
    @if (!string.IsNullOrEmpty(Model))
    {
        <iframe src="@Model" width="100%" height="1000px"></iframe>
    }
    else
    {
        <p>Invalid file path.</p>
    }
</body>
</html>
