<div class="container">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <a class="navbar-brand" href="#!"><i>QuizAura</i></a>
        <ul class="navbar-nav me-auto" style="margin-left: 100px">
            <li class="nav-item">
                <a class="nav-link nav-link-large active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-link-large" href="#">Features</a>
            </li>
            <li class="nav-item">
                <a class="nav-link nav-link-large" href="#">Pricing</a>
            </li>
        </ul>
        <ul class="navbar-nav ms-auto">
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogIn">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                </li>
            }
            else 
            {
                <li class="nav-item">
                    <form asp-area="" asp-controller="Account" asp-action="LogOut" method="post">
                        <button type="submit" class="nav-link btn btn-link" style="background: none; border: none; cursor: pointer;">Logout</button>
                    </form>
                </li>
            }
        </ul>
    </div>
</div>
