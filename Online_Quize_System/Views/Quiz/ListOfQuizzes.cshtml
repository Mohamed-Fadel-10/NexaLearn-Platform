@using Entities.Models
@model IEnumerable<Quiz>
@{
    ViewData["Title"] = "ListOfQuizzes";
    Layout = "_Dashboard";
}

<div class="container-fluid mt-4">
    <div class="table-responsive-md">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Quiz Name</th>
                    <th>Description</th>
                    <th>Total Degree</th>
                    <th>Passing Degree</th>
                    <th>Duration</th>
                    <th>Created On</th>
                    <th>Question Numbers</th>
                    <th>SessionID</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.TotalDegree</td>
                        <td>@item.PassingScore</td>
                        <td>@item.Duration</td>
                        <td>@item.CreatedOn?.ToString("dd MMM yyyy")</td>
                        <td>@item.QuestionNumbers</td>
                        <td>@item.SessionID</td>
                        <td>@item.IsPrivate</td>
                        <td>
                            <a asp-action="Details" asp-controller="Quiz" asp-route-id="@item.Id">Details</a>|
                            <a asp-action="Edit" asp-controller="Quiz" asp-route-id="@item.Id" >Edit</a>|
                            <a asp-action="Delete" asp-controller="Quiz" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

<style>
    .container-fluid {
        padding: 0;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .btn {
        margin: 0 2px;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
